meta {
  name: Provider Fallback
  type: http
  seq: 8
}

post {
  url: {{baseUrl}}/openai/v1/chat/completions
  body: json
  auth: none
}

auth:bearer {
  token: {{token}}
}

headers {
  Content-Type: application/json
  X-Provider: invalid-provider
  X-Enable-Fallback: true
}

body:json {
  {
    "model": "llama-3.3-70b-versatile",
    "messages": [
      {
        "role": "system",
        "content": "You are a helpful assistant."
      },
      {
        "role": "user",
        "content": "Test fallback mechanism. Say 'Fallback successful!' and nothing else."
      }
    ],
    "temperature": 0.7,
    "max_tokens": 50,
    "stream": false
  }
}

tests {
  test("should return 200 OK (fallback successful) or 503 (no fallback)", function() {
    expect([200, 503, 401]).to.include(res.status);
  });
  
  if (res.status === 200) {
    test("should return completion from fallback provider", function() {
      const body = res.getBody();
      expect(body.choices).to.be.an('array');
      expect(body.choices.length).to.be.greaterThan(0);
    });
    
    test("should have message content", function() {
      const body = res.getBody();
      expect(body.choices[0].message.content).to.be.a('string');
      expect(body.choices[0].message.content.length).to.be.greaterThan(0);
    });
    
    test("should include fallback metadata", function() {
      const body = res.getBody();
      // Check if response includes provider information
      expect(body.model).to.be.a('string');
    });
    
    test("should include usage information", function() {
      const body = res.getBody();
      expect(body.usage).to.be.an('object');
      expect(body.usage.total_tokens).to.be.a('number');
    });
  }
}

script:post-response {
  const response = res.getBody();
  if (response && response.id) {
    bru.setEnvVar("fallbackCompletionId", response.id);
    bru.setEnvVar("fallbackProvider", response.model);
  }
}
