meta {
  name: Requests-Minute-Fixed-Allow-50%
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 100
  X-Test-Quota-Window: minute
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: allow
  X-Test-Simulate-Usage: 50
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test request - 50% quota usage"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 200
  res.headers.x-ratelimit-limit: eq 100
  res.headers.x-ratelimit-remaining: eq 50
}

tests {
  test("Request at 50% usage succeeds", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Rate limit shows 50% remaining", function() {
    expect(res.headers['x-ratelimit-limit']).to.equal('100');
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(50);
  });
  
  test("Usage percentage within tolerance", function() {
    const remaining = parseInt(res.headers['x-ratelimit-remaining']);
    const limit = parseInt(res.headers['x-ratelimit-limit']);
    const usagePercent = ((limit - remaining) / limit) * 100;
    expect(usagePercent).to.be.closeTo(50, 2);
  });
  
  test("Warning header may be present", function() {
    // Some systems warn at 50% usage
    if (res.headers['x-ratelimit-warning']) {
      expect(res.headers['x-ratelimit-warning']).to.include('50%');
    }
  });
}

docs {
  # Requests-Minute-Fixed-Allow-50%
  
  Tests quota enforcement at 50% usage (mid-range consumption).
  
  ## Test Configuration
  - Metric Type: requests
  - Time Granularity: minute
  - Window Type: fixed
  - Action: allow
  - Usage Level: 50% (50/100 requests)
  
  ## Expected Behavior
  - Status: 200 OK
  - X-RateLimit-Limit: 100
  - X-RateLimit-Remaining: 50
  - Request succeeds
  - May include warning header
  
  ## Use Case
  Tests normal operational state where quota is being consumed
  but plenty of capacity remains.
}
