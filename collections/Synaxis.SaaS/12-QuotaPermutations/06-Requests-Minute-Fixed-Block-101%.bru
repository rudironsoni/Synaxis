meta {
  name: Requests-Minute-Fixed-Block-101%
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 100
  X-Test-Quota-Window: minute
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: block
  X-Test-Simulate-Usage: 101
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test request - 101% quota usage (block)"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 403
  res.headers.x-ratelimit-limit: eq 100
  res.headers.x-ratelimit-remaining: eq 0
  res.body.error.code: eq quota_exceeded
}

tests {
  test("Request blocked at 101% usage", function() {
    expect(res.status).to.equal(403);
  });
  
  test("Rate limit exceeded", function() {
    expect(res.headers['x-ratelimit-limit']).to.equal('100');
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(0);
  });
  
  test("No Retry-After for blocked requests", function() {
    // Blocks typically don't have retry-after as they require admin intervention
    if (res.headers['retry-after']) {
      // If present, it should be very long or reference support
      expect(res.headers['x-contact-support']).to.be.a('string');
    }
  });
  
  test("Error response indicates blocking", function() {
    expect(res.body.error).to.be.an('object');
    expect(res.body.error.code).to.equal('quota_exceeded');
    expect(res.body.error.type).to.equal('block');
    expect(res.body.error.message).to.match(/blocked|exceeded|contact support/i);
  });
  
  test("Support contact information provided", function() {
    expect(res.body.error.support_url).to.be.a('string');
    expect(res.body.error.support_url).to.match(/^https?:\/\//);
  });
  
  test("Quota details in error", function() {
    expect(res.body.error.details).to.be.an('object');
    expect(res.body.error.details.limit).to.equal(100);
    expect(res.body.error.details.used).to.be.greaterThan(100);
    expect(res.body.error.details.window).to.equal('minute');
  });
}

docs {
  # Requests-Minute-Fixed-Block-101%
  
  Tests blocking when quota is exceeded (over limit).
  
  ## Test Configuration
  - Metric Type: requests
  - Time Granularity: minute
  - Window Type: fixed
  - Action: block
  - Usage Level: 101% (101/100 requests - over limit)
  
  ## Expected Behavior
  - Status: 403 Forbidden
  - X-RateLimit-Limit: 100
  - X-RateLimit-Remaining: 0
  - Error code: quota_exceeded
  - Error type: block
  - Support URL provided
  
  ## When Blocking Occurs
  - Repeated quota violations
  - Abuse detection
  - Administrative enforcement
  - Exceeding hard limits
  
  ## Client Recovery
  1. Contact support (support_url in response)
  2. Upgrade plan/increase quota
  3. Wait for admin review
  4. Do NOT retry automatically
  
  ## Difference from Throttle
  - Block: Requires intervention, long-term
  - Throttle: Automatic recovery after window reset
}
