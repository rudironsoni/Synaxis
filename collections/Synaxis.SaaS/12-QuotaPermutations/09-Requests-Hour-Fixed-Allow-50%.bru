meta {
  name: Requests-Hour-Fixed-Allow-50%
  type: http
  seq: 9
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 1000
  X-Test-Quota-Window: hour
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: allow
  X-Test-Simulate-Usage: 500
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test request - 50% hourly quota"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 200
  res.headers.x-ratelimit-limit: eq 1000
  res.headers.x-ratelimit-remaining: eq 500
  res.headers.x-ratelimit-window: eq hour
}

tests {
  test("Hourly quota at 50% succeeds", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Hourly rate limit headers", function() {
    expect(res.headers['x-ratelimit-window']).to.equal('hour');
    expect(res.headers['x-ratelimit-limit']).to.equal('1000');
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(500);
  });
  
  test("Reset at hour boundary", function() {
    const reset = parseInt(res.headers['x-ratelimit-reset']);
    const now = Math.floor(Date.now() / 1000);
    const secondsUntilReset = reset - now;
    
    // Should be between 0 and 3600 seconds (1 hour)
    expect(secondsUntilReset).to.be.greaterThan(0);
    expect(secondsUntilReset).to.be.lessThanOrEqual(3600);
  });
  
  test("Response successful", function() {
    expect(res.body.id).to.be.a('string');
    expect(res.body.choices).to.be.an('array');
  });
}

docs {
  # Requests-Hour-Fixed-Allow-50%
  
  Tests hourly quota enforcement at 50% usage.
  
  ## Test Configuration
  - Metric Type: requests
  - Time Granularity: hour
  - Window Type: fixed
  - Action: allow
  - Usage Level: 50% (500/1000 requests)
  
  ## Hourly Window Behavior
  - Window: Full clock hour (14:00:00 - 14:59:59)
  - Reset: At next hour boundary (15:00:00)
  - Longer window = higher burst capacity
  
  ## Use Cases
  ✅ API with moderate traffic
  ✅ Daily batch jobs (run multiple per hour)
  ✅ User-facing applications
  ✅ Balancing flexibility with protection
  
  ## Comparison to Minute Window
  - Hour: 1000 req/hr = ~16.7 req/min average
  - Minute: 100 req/min = 6000 req/hr theoretical max
  - Hour window allows bursts but limits sustained abuse
}
