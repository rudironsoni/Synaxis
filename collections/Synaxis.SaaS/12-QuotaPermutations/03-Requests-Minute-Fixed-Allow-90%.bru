meta {
  name: Requests-Minute-Fixed-Allow-90%
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 100
  X-Test-Quota-Window: minute
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: allow
  X-Test-Simulate-Usage: 90
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test request - 90% quota usage"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 200
  res.headers.x-ratelimit-limit: eq 100
  res.headers.x-ratelimit-remaining: eq 10
  res.headers.x-ratelimit-warning: isDefined
}

tests {
  test("Request at 90% usage still succeeds", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Rate limit shows 10% remaining", function() {
    expect(res.headers['x-ratelimit-limit']).to.equal('100');
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(10);
  });
  
  test("Warning header present at high usage", function() {
    expect(res.headers['x-ratelimit-warning']).to.be.a('string');
    expect(res.headers['x-ratelimit-warning']).to.match(/quota|limit|90%/i);
  });
  
  test("Usage percentage accurate", function() {
    const remaining = parseInt(res.headers['x-ratelimit-remaining']);
    const limit = parseInt(res.headers['x-ratelimit-limit']);
    const usagePercent = ((limit - remaining) / limit) * 100;
    expect(usagePercent).to.be.closeTo(90, 1);
  });
  
  test("Response indicates approaching limit", function() {
    expect(res.body.id).to.be.a('string');
    // System should still process request normally
  });
}

docs {
  # Requests-Minute-Fixed-Allow-90%
  
  Tests quota enforcement at 90% usage (approaching limit).
  
  ## Test Configuration
  - Metric Type: requests
  - Time Granularity: minute
  - Window Type: fixed
  - Action: allow
  - Usage Level: 90% (90/100 requests)
  
  ## Expected Behavior
  - Status: 200 OK
  - X-RateLimit-Limit: 100
  - X-RateLimit-Remaining: 10
  - X-RateLimit-Warning: Present (approaching limit)
  - Request succeeds but client should slow down
  
  ## Client Behavior
  Clients should:
  - Monitor warning header
  - Implement backoff strategy
  - Consider request batching
  - Prepare for potential throttling
}
