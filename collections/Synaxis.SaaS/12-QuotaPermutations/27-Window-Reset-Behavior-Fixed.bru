meta {
  name: Window-Reset-Behavior-Fixed
  type: http
  seq: 27
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 100
  X-Test-Quota-Window: minute
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: allow
  X-Test-Simulate-Usage: 95
  X-Test-Simulate-Window-Reset: true
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test fixed window reset behavior"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 200
  res.headers.x-ratelimit-limit: eq 100
  res.headers.x-ratelimit-remaining: eq 100
}

tests {
  test("Request succeeds after window reset", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Quota fully reset", function() {
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(100);
  });
  
  test("Reset timestamp shows next window", function() {
    const reset = parseInt(res.headers['x-ratelimit-reset']);
    const now = Math.floor(Date.now() / 1000);
    expect(reset).to.be.greaterThan(now);
  });
  
  test("Previous usage cleared", function() {
    // After reset, it's as if previous 95 requests never happened
    expect(res.headers['x-ratelimit-usage-previous-window']).to.equal('95');
  });
}

docs {
  # Window-Reset-Behavior-Fixed
  
  Tests fixed window reset behavior.
  
  ## Fixed Window Reset
  - Instantaneous: 0 → 100 available
  - Boundary-aligned: At minute/hour/day boundary
  - All previous usage cleared
  - Can cause traffic spikes
  
  ## Timeline Example
  ```
  14:03:59 - 95/100 used, 5 remaining
  14:04:00 - RESET → 0/100 used, 100 remaining
  14:04:01 - Burst of 100 requests possible
  ```
}
