meta {
  name: Requests-Minute-Fixed-Allow-99%
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/api/v1/inference/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  Content-Type: application/json
  X-Organization-Id: {{orgId}}
  X-Test-Quota-Type: requests
  X-Test-Quota-Limit: 100
  X-Test-Quota-Window: minute
  X-Test-Quota-Window-Type: fixed
  X-Test-Quota-Action: allow
  X-Test-Simulate-Usage: 99
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test request - 99% quota usage"
      }
    ],
    "max_tokens": 10
  }
}

assert {
  res.status: eq 200
  res.headers.x-ratelimit-limit: eq 100
  res.headers.x-ratelimit-remaining: eq 1
  res.headers.x-ratelimit-warning: isDefined
}

tests {
  test("Last allowed request succeeds", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Rate limit shows 1 remaining", function() {
    expect(res.headers['x-ratelimit-limit']).to.equal('100');
    expect(parseInt(res.headers['x-ratelimit-remaining'])).to.equal(1);
  });
  
  test("Critical warning present", function() {
    expect(res.headers['x-ratelimit-warning']).to.be.a('string');
    expect(res.headers['x-ratelimit-warning']).to.match(/critical|1 remaining|last request/i);
  });
  
  test("Reset time provided", function() {
    const reset = parseInt(res.headers['x-ratelimit-reset']);
    const now = Math.floor(Date.now() / 1000);
    expect(reset).to.be.greaterThan(now);
  });
  
  test("Request processed successfully", function() {
    expect(res.body.id).to.be.a('string');
    expect(res.body.choices).to.be.an('array');
  });
}

docs {
  # Requests-Minute-Fixed-Allow-99%
  
  Tests quota enforcement at 99% usage (last request before limit).
  
  ## Test Configuration
  - Metric Type: requests
  - Time Granularity: minute
  - Window Type: fixed
  - Action: allow
  - Usage Level: 99% (99/100 requests)
  
  ## Expected Behavior
  - Status: 200 OK
  - X-RateLimit-Limit: 100
  - X-RateLimit-Remaining: 1
  - X-RateLimit-Warning: Critical level
  - This is the last request before throttling/blocking
  
  ## Critical State
  - Next request will trigger quota action
  - Client MUST wait for window reset
  - Implement exponential backoff
  - Monitor reset timestamp
}
