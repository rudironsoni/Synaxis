meta {
  name: Missing User Region Header
  type: http
  seq: 35
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-Processed-Region: us-east-1
  X-Cross-Border: false
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with missing user region header"
      }
    ]
  }
}

assert {
  res.status: eq 400
}

tests {
  test("Missing user region header rejected", function() {
    expect(res.status).to.equal(400);
    expect(res.body.error).to.include('user region required');
  });
}

docs {
  # Missing User Region Header
  
  Tests error handling when X-User-Region header is missing.
  User region is required for compliance routing.
  
  ## Expected Behavior
  - Request rejected with 400
  - Error indicates user region required
}
