meta {
  name: EU User - US Region - Cross Border - Adequacy
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Processed-Region: us-east-1
  X-Cross-Border: true
  X-Legal-Basis: adequacy
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for EU to US transfer with adequacy"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq adequacy
  res.headers.x-processed-region: eq us-east-1
}

tests {
  test("Transfer under adequacy decision", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('adequacy');
  });
  
  test("Adequacy framework validated", function() {
    expect(res.headers['x-adequacy-framework']).to.be.defined;
  });
}

docs {
  # EU User - US Region - Cross Border - Adequacy
  
  Tests EU to US data transfer under an adequacy decision framework.
  Currently could apply to EU-US Data Privacy Framework if certified.
  
  ## Legal Basis
  - Article 45 GDPR - Adequacy decision
  - Requires framework certification
  - Simplified compliance vs SCC
}
