meta {
  name: Invalid User Region - US Region
  type: http
  seq: 33
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: invalid-region
  X-Processed-Region: us-east-1
  X-Cross-Border: false
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with invalid user region"
      }
    ]
  }
}

assert {
  res.status: eq 400
}

tests {
  test("Invalid user region rejected", function() {
    expect(res.status).to.equal(400);
    expect(res.body.error).to.include('invalid user region');
  });
}

docs {
  # Invalid User Region
  
  Tests error handling for invalid user region values.
  Only eu-west-1, us-east-1, and sa-east-1 are valid.
  
  ## Expected Behavior
  - Request rejected with 400
  - Error indicates invalid user region
}
