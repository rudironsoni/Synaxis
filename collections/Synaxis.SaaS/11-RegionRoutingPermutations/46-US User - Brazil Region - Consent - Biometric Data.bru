meta {
  name: US User - Brazil Region - Consent - Biometric Data
  type: http
  seq: 46
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: us-east-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: consent
  X-Data-Category: biometric
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with sensitive biometric data category"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-sensitive-data-processed: eq true
  res.headers.x-data-category: eq biometric
}

tests {
  test("Sensitive data category tracked", function() {
    expect(res.headers['x-sensitive-data-processed']).to.equal('true');
    expect(res.headers['x-data-category']).to.equal('biometric');
  });
}

docs {
  # US to Brazil with Sensitive Data
  
  Tests cross-border transfer with sensitive biometric data category.
  Verifies enhanced protections for special category data.
}
