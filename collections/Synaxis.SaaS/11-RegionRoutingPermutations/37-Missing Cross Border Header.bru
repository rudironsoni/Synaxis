meta {
  name: Missing Cross Border Header
  type: http
  seq: 37
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Processed-Region: us-east-1
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with missing cross-border header"
      }
    ]
  }
}

assert {
  res.status: eq 400
}

tests {
  test("Missing cross-border header rejected", function() {
    expect(res.status).to.equal(400);
    expect(res.body.error).to.include('cross-border flag required');
  });
}

docs {
  # Missing Cross-Border Header
  
  Tests error handling when X-Cross-Border header is missing.
  Cross-border flag is required for compliance validation.
  
  ## Expected Behavior
  - Request rejected with 400
  - Error indicates cross-border flag required
}
