meta {
  name: US User - Brazil Region - Cross Border - SCC
  type: http
  seq: 15
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: us-east-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: SCC
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for US to Brazil transfer with SCC"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq SCC
  res.headers.x-processed-region: eq sa-east-1
}

tests {
  test("US to Brazil transfer with SCC", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('SCC');
  });
  
  test("LGPD compliance for international transfer", function() {
    expect(res.headers['x-compliance-frameworks']).to.include('LGPD');
  });
}

docs {
  # US User - Brazil Region - Cross Border - SCC
  
  Tests US to Brazil data transfer using standard contractual clauses.
  Must comply with LGPD requirements for international transfers.
  
  ## Legal Basis
  - LGPD Article 33 - International transfer clauses
  - Similar to GDPR SCCs
  - ANPD oversight
}
