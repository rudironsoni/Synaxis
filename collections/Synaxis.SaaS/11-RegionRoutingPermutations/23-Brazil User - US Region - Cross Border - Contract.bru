meta {
  name: Brazil User - US Region - Cross Border - Contract
  type: http
  seq: 23
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: sa-east-1
  X-Processed-Region: us-east-1
  X-Cross-Border: true
  X-Legal-Basis: contract
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for Brazil to US transfer for contract"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq contract
  res.headers.x-processed-region: eq us-east-1
}

tests {
  test("Transfer for contract performance", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('contract');
  });
}

docs {
  # Brazil User - US Region - Cross Border - Contract
  
  Tests Brazil to US data transfer necessary for contract performance.
  
  ## Legal Basis
  - LGPD Article 33 - Contract execution
  - Transfer must be strictly necessary
  - Must document necessity
}
