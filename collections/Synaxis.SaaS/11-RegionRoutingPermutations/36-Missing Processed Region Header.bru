meta {
  name: Missing Processed Region Header
  type: http
  seq: 36
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Cross-Border: false
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with missing processed region header"
      }
    ]
  }
}

assert {
  res.status: eq 400
}

tests {
  test("Missing processed region header rejected", function() {
    expect(res.status).to.equal(400);
    expect(res.body.error).to.include('processed region required');
  });
}

docs {
  # Missing Processed Region Header
  
  Tests error handling when X-Processed-Region header is missing.
  Processed region is required for compliance routing.
  
  ## Expected Behavior
  - Request rejected with 400
  - Error indicates processed region required
}
