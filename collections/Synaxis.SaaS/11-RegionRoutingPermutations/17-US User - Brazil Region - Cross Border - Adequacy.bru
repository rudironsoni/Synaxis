meta {
  name: US User - Brazil Region - Cross Border - Adequacy
  type: http
  seq: 17
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: us-east-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: adequacy
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for US to Brazil transfer with adequacy"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq adequacy
  res.headers.x-processed-region: eq sa-east-1
}

tests {
  test("US to Brazil transfer under adequacy", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('adequacy');
  });
}

docs {
  # US User - Brazil Region - Cross Border - Adequacy
  
  Tests US to Brazil data transfer under adequacy recognition.
  Brazil has not recognized US as having adequate protection.
  
  ## Legal Basis
  - Adequacy decision (if applicable)
  - Currently no US-Brazil adequacy
  - Would simplify compliance if established
}
