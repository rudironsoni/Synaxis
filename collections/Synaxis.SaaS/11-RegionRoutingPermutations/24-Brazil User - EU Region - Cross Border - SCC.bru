meta {
  name: Brazil User - EU Region - Cross Border - SCC
  type: http
  seq: 24
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: sa-east-1
  X-Processed-Region: eu-west-1
  X-Cross-Border: true
  X-Legal-Basis: SCC
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for Brazil to EU transfer with SCC"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq SCC
  res.headers.x-processed-region: eq eu-west-1
}

tests {
  test("Brazil to EU transfer with SCC", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('SCC');
  });
  
  test("Dual compliance LGPD/GDPR", function() {
    expect(res.headers['x-compliance-frameworks']).to.include('LGPD');
    expect(res.headers['x-compliance-frameworks']).to.include('GDPR');
  });
}

docs {
  # Brazil User - EU Region - Cross Border - SCC
  
  Tests Brazil to EU data transfer using standard contractual clauses.
  Favorable scenario as EU has partial adequacy for Brazil.
  
  ## Legal Basis
  - LGPD Article 33 - International transfer
  - EU-Brazil partial adequacy decision
  - Data becomes subject to GDPR in EU
}
