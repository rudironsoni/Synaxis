meta {
  name: EU User - Brazil Region - Cross Border - Adequacy
  type: http
  seq: 8
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: adequacy
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for EU to Brazil transfer with adequacy"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq adequacy
  res.headers.x-processed-region: eq sa-east-1
}

tests {
  test("Transfer under adequacy decision", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('adequacy');
  });
  
  test("Brazil adequacy status validated", function() {
    expect(res.headers['x-adequacy-framework']).to.equal('EU-Brazil');
  });
}

docs {
  # EU User - Brazil Region - Cross Border - Adequacy
  
  Tests EU to Brazil data transfer under adequacy decision.
  EU has recognized certain aspects of Brazil's LGPD as adequate.
  
  ## Legal Basis
  - Partial adequacy for Brazil under GDPR
  - LGPD provides similar protections
  - Simplified compliance path
}
