meta {
  name: EU User - Brazil Region - Cross Border - Consent
  type: http
  seq: 7
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: consent
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for EU to Brazil transfer with consent"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq consent
  res.headers.x-processed-region: eq sa-east-1
}

tests {
  test("EU to Brazil transfer with consent", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('consent');
  });
  
  test("Consent valid under both GDPR and LGPD", function() {
    expect(res.headers['x-consent-id']).to.be.defined;
    expect(res.headers['x-compliance-frameworks']).to.include('GDPR');
    expect(res.headers['x-compliance-frameworks']).to.include('LGPD');
  });
}

docs {
  # EU User - Brazil Region - Cross Border - Consent
  
  Tests EU to Brazil data transfer based on explicit consent.
  Consent must meet both GDPR Article 49 and LGPD Article 33 requirements.
  
  ## Legal Basis
  - GDPR: Article 49(1)(a) - Explicit consent
  - LGPD: Article 33 - International transfer consent
  - Higher bar than standard consent
}
