meta {
  name: Brazil User - EU Region - Cross Border - Adequacy
  type: http
  seq: 26
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: sa-east-1
  X-Processed-Region: eu-west-1
  X-Cross-Border: true
  X-Legal-Basis: adequacy
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test message for Brazil to EU transfer with adequacy"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-cross-border-transfer: eq true
  res.headers.x-legal-basis: eq adequacy
  res.headers.x-processed-region: eq eu-west-1
}

tests {
  test("Brazil to EU transfer under adequacy", function() {
    expect(res.headers['x-cross-border-transfer']).to.equal('true');
    expect(res.headers['x-legal-basis']).to.equal('adequacy');
  });
  
  test("EU-Brazil adequacy framework", function() {
    expect(res.headers['x-adequacy-framework']).to.equal('EU-Brazil');
  });
}

docs {
  # Brazil User - EU Region - Cross Border - Adequacy
  
  Tests Brazil to EU data transfer under adequacy decision.
  EU has recognized certain aspects of Brazil's LGPD as adequate.
  
  ## Legal Basis
  - EU partial adequacy for Brazil
  - Simplified compliance path
  - LGPD and GDPR alignment
}
