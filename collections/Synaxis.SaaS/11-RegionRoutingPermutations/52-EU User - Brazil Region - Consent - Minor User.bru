meta {
  name: EU User - Brazil Region - Consent - Minor User
  type: http
  seq: 52
}

post {
  url: {{baseUrl}}/api/v1/chat/completions
  body: json
  auth: bearer
}

auth:bearer {
  token: {{apiKey}}
}

headers {
  X-User-Region: eu-west-1
  X-Processed-Region: sa-east-1
  X-Cross-Border: true
  X-Legal-Basis: consent
  X-User-Age-Category: minor
  X-Parental-Consent: true
  X-Organization-Id: {{orgId}}
}

body:json {
  {
    "model": "openai/gpt-4",
    "messages": [
      {
        "role": "user",
        "content": "Test with minor user protection"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.headers.x-parental-consent-verified: eq true
  res.headers.x-coppa-compliant: eq true
}

tests {
  test("Minor protection mechanisms", function() {
    expect(res.headers['x-parental-consent-verified']).to.equal('true');
    expect(res.headers['x-coppa-compliant']).to.equal('true');
  });
}

docs {
  # EU to Brazil with Minor User
  
  Tests cross-border transfer for minor users.
  Verifies GDPR Article 8 and COPPA compliance for children.
}
