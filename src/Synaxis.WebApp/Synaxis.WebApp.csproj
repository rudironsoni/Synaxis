<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishCompressedAssets>false</PublishCompressedAssets>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Yarp.ReverseProxy" />
    <!-- Needed for running npm in build targets if not already present on build agents -->
    <!-- Do not add Microsoft.Build.Utilities.Core due to Central Package Management rules -->
  </ItemGroup>

  <Target Name="NpmInstall" BeforeTargets="Build">
    <Message Importance="high" Text="Running npm install in ClientApp..." />
    <Exec WorkingDirectory="$(ProjectDir)ClientApp" Command="npm install" />
  </Target>

  <Target Name="NpmBuild" BeforeTargets="Build">
    <Message Importance="high" Text="Running npm run build in ClientApp..." />
    <Exec WorkingDirectory="$(ProjectDir)ClientApp" Command="npm run build" />
  </Target>

  <!-- The ClientApp Vite build now outputs directly to wwwroot. Keep npm targets and run build before Build. -->
  <!-- Ensure wwwroot files are picked up by the build/publish pipeline (no explicit copy target needed) -->

  <!-- Make sure npm build is executed before Build -->

</Project>
