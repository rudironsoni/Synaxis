<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <NoWarn>$(NoWarn);SA0001;SA1633;SA1200;SA1210;SA1000;SA1009;SA1010;SA1011;SA1028;SA1512;SA1513;SA1518;S125;MA0056;MA0016</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="FluentAssertions" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
    <PackageReference Include="Microsoft.Extensions.AI" />
    <PackageReference Include="Moq" />
    <PackageReference Include="NSubstitute" />
    <PackageReference Include="xunit" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\InferenceGateway\Application\Synaxis.InferenceGateway.Application.csproj" />
    <ProjectReference Include="..\..\src\InferenceGateway\Infrastructure\Synaxis.InferenceGateway.Infrastructure.csproj" />
    <ProjectReference Include="..\..\src\InferenceGateway\WebApi\Synaxis.InferenceGateway.WebApi.csproj" />
  </ItemGroup>

</Project>
