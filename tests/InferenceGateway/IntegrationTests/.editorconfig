# Integration Tests - Relaxed Analyzer Rules
root = false

[*.cs]
# IDisposable warnings - acceptable in integration tests where HttpClient lifetime is managed by factory
dotnet_diagnostic.IDISP001.severity = suggestion
dotnet_diagnostic.IDISP003.severity = suggestion
dotnet_diagnostic.IDISP004.severity = suggestion
dotnet_diagnostic.IDISP006.severity = suggestion
dotnet_diagnostic.IDISP025.severity = suggestion

# SA1200: Using directives - allow outside namespace for file-scoped namespaces
dotnet_diagnostic.SA1200.severity = none

# SA1003, SA1010: Collection expression whitespace - suppress until C# 12 rules are stable
dotnet_diagnostic.SA1003.severity = none
dotnet_diagnostic.SA1010.severity = none

# MA0048: File name match type name - multiple test classes per file is acceptable
dotnet_diagnostic.MA0048.severity = suggestion

# StyleCop: Test-specific relaxations
dotnet_diagnostic.SA1101.severity = none
dotnet_diagnostic.SA1110.severity = none
dotnet_diagnostic.SA1413.severity = none
dotnet_diagnostic.SA1402.severity = none
dotnet_diagnostic.SA1203.severity = none
dotnet_diagnostic.SA1214.severity = none
dotnet_diagnostic.SA1649.severity = none
dotnet_diagnostic.SA1313.severity = none
dotnet_diagnostic.SA1137.severity = none
dotnet_diagnostic.SA1117.severity = none
dotnet_diagnostic.SA1018.severity = none

